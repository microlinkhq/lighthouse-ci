{
  "name": "microlink-lighthouse",
  "description": "Automate running Lighthouse for every commit, viewing the changes, and preventing regressions",
  "repository": "https://github.com/microlinkhq/lighthouse-ci",
  "logo": "https://cdn.microlink.io/logo/trim.jpeg",
  "keywords": [
    "microlink",
    "lighthouse",
    "server",
    "ci"
  ],
  "addons": [
    "heroku-postgresql:hobby-dev",
    "papertrail:choklad"
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "formation": {
    "web": {
      "command": "npm start"
    }
  }
}
